<% layout("/layouts/boilerplate")%>
  <%= success %>
    <%= error %>
      <style>
        .filter {
          
         
          display: flex;
          flex-wrap: wrap;
          margin-top: 1.5rem;
          text-align: center;


        }

        .icon1 {
          margin-right: 2rem;
          opacity: 0.7;
          
         

        }

        .icon1:hover {
          cursor: pointer;
          opacity: 1;
        }
        .filter p{
          font-size: 0.8rem;
        }
        .tax-info{
          display: none;
        }
        .tax-toggle{
          border: 2px solid black;
          border-radius: 1rem;
          height: 2.8rem;
          padding: 0.4rem;
          margin-left: 3rem;
          display: flex;
          text-align: center;
         
  border: 3px solid transparent;
  border-radius: 10px;
  background: 
    linear-gradient(white, white) padding-box,
    linear-gradient(90deg, #ff0080, #ff8c00, #40e0d0, #ff0080) border-box;
  background-size: 300% 300%;
  animation: borderAnimation 5s linear infinite;
  display: inline-block;
        }
      
    @keyframes borderAnimation {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Optional â€” improve look of the switch */
.form-check-input {
  cursor: pointer;
}

.form-check-label {
  
  color: #333;
  margin-left: 10px;
}    
      </style>

      <body>
        <!-- <h3>All Listings</h3>
    <form method="GET" action="/listings/new">
    </form> -->


        <div id="filters">
          <div class="filter">
            <div class="icon1">
              <i class="fa-solid fa-fire"></i>
              <p>Trending</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-bed"></i>
              <p>Room</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-city"></i>
              <p>City</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-mountain"></i>
              <p>mountain</p>
            </div>

            <div class="icon1">
              <i class="fa-brands fa-fort-awesome"></i>
              <p>Castles</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-person-swimming"></i>
              <p>Amazing Pools</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-campground"></i>
              <p>Camping</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-tractor"></i>
              <p>Farms</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-snowflake"></i>
              <p>Arctic</p>
            </div>

            <div class="icon1">
            <i class="fa-solid fa-igloo"></i>              <p>Domes</p>
            </div>

            <div class="icon1">
              <i class="fa-solid fa-ferry"></i>
              <p>Boats</p>
            </div>

                 <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display totle after taxes </label>
</div>
          </div>
     
          </div>
        </div>
        <!-- All Listings -->
        <div class="row row-cols-lg-3 row cols-md-2 row-cols-sm-1 mt-3">
          <% for(let listing of allListings){%>
            <a href="/listings/<%= listing._id %>" class="listing-link">

              <div class="card col listing-card">
                <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image" style="height:20rem ;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"> <b>
                      <%= listing.title %>
                    </b>
                    <br>
                    <%= listing.description%>
                      <br>
                      <b> &#8377;<%= listing.price.toLocaleString("en-IN") %>/Night </b>
                      <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
              <% } %>
        </div>
        </a>
        <script>
          let taxSwitch  = document.getElementById("switchCheckDefault");
          taxSwitch.addEventListener("click",()=>{
          
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
              if(info.style.display != "inline"){
                 info.style.display = "inline";
              }
            else{
              info.style.display = "none";
            }
            }
          })
        </script>
      </body>